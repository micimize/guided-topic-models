{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "preserve",
    "lib": ["es2017", "es7", "dom"],
    "types": [
      "webpack-env",
      "node"
    ],
    "typeRoots": [
      "@types",
      "./@types"
    ],
    "allowSyntheticDefaultImports": true
  }
}
